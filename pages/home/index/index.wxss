.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.head{
  width: 100%;
  height: 80px;
  background-color: #00b4af;
  position: absolute;
}
.head-img{
  width: calc(100% - 20px);
  margin-left: 10px;
  height: 120px;
  position: relative;
  margin-top: 20px;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
  border-bottom-left-radius: 8px;
}
.footer{
  background-color: #F6FAFA;
  width: 100%;
  position: fixed;
  top: 0px;
  height: 20px;
}
.content{
  width: 100%;
  margin-left: 10px;
  margin-top: 10px;

}
.content-head{
  height: 20px;
}
.content-head-line{
  height: 18px;
  width: 7PX;
  background-color: #00b4af;
  float: left;
    border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
  
}
.content-haad-title{
   float: left;
   font-size: 15px;
   height: 18px;
   margin-left: 10px;

}
.content-head-bt{
  float: right;
  width: 100px;
  height: 20px;
  text-align: center;
  line-height: 20px;
  font-size: 15px;
  border-style: none;
  border-width: 0px;
  margin-right: 10px;
  color: #A0A0A0
}
.content-cell{
  margin-top: 15px;
  padding-top: 1px;
  background-color: white;
  width: calc(100% - 20px);
      border-top-left-radius: 4px;
  border-top-right-radius: 4px;
